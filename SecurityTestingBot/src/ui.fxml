<VBox spacing="10" prefWidth="400" prefHeight="150" fx:controller="Controller" xmlns:fx="http://javafx.com/fxml">
    <fx:define>
        <Font fx:id="FONT" size="12" />
    </fx:define>
    
    <padding>
    	<Insets top="20" right="20" bottom="20" left="20"/>
    </padding>
    
    <HBox alignment="CENTER" spacing="5">  	
        <Label text="URL : " font="$FONT"/>
        <TextField fx:id="url" prefWidth="325" font="$FONT" onKeyReleased="#checkBeforeTesting" />
    </HBox>
    
    <HBox alignment="CENTER">
	    <ComboBox fx:id="framework" prefWidth="360" promptText="-- Select Framework --" onAction="#checkBeforeTesting">
	      <items>
	        <FXCollections fx:factory="observableArrayList">
	          <String fx:value="Joomla"/>
	          <String fx:value="Wordpress" />
	          <String fx:value="Drupal" />
	        </FXCollections>
	      </items>
	    </ComboBox>
    </HBox>
    
    <HBox alignment="center" spacing="50">
	    <CheckBox fx:id="sqli" text="SQL Injection" onAction="#checkBeforeTesting" />
	    <CheckBox fx:id="xss" text="Cross-site Script" onAction="#checkBeforeTesting" />
    </HBox>
    
    <HBox alignment="center">
    	<Button fx:id="btn" disable="true" text="Run" font="$FONT" onAction="#penetrationTest" />
    </HBox>








